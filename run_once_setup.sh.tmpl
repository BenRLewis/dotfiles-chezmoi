#!/bin/bash
set -e
if [ ! -d ~/.local/bin ]; then
  mkdir ~/.local/bin
fi

#Install antigen if it isn't installed
if [ ! -d ~/.local/bin/antigen ]; then
  echo "Cloning antigen"
  git clone https://github.com/zsh-users/antigen ~/.local/bin/antigen
fi

